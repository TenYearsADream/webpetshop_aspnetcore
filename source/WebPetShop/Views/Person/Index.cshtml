@model IEnumerable<WebPetShop.Models.People.Person>

@{
    ViewBag.Title = "Pessoas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Pessoas</h2>
<br />

<p>
    <a asp-action="Create" class="btn btn-default">Novo</a>
    <a asp-action="Find" class="btn btn-default">Consultar</a>
</p>

<div id="grid" style="border:1px solid black; height:350px; overflow-y: auto; font-size:10pt;">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Document1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Document2)
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.Address.City)*@
                    @Html.DisplayName("Cidade - UF")
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.Address.State)
                    </th>*@
                <th>
                    @Html.DisplayName("Contato")
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.AddDate)*@
                    @Html.DisplayName("Inclução")
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.EditDate)*@
                    @Html.DisplayName("Alteração")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Document1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Document2)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Address.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address.Number)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Address.City) -  @Html.DisplayFor(modelItem => item.Address.State)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Address.State)
                        </td>*@
                    <td>
                        @item.Contacts[0].Description
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AddDate) @Html.DisplayFor(modelItem => item.AddUser)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EditDate) @Html.DisplayFor(modelItem => item.EditUser)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Alterar</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Mostrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>